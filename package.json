{
  "name": "opencode-bot-agent",
  "version": "0.0.26",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev:adapter": "bun run --watch src/bin/bot-adapter.ts",
    "dev:worker": "bun run --watch src/bin/session-worker.ts",
    "llbot:registrar": "bun run src/llbot-registrar.ts",
    "clean:sessions": "bun run src/bin/clean-sessions.ts",
    "build:adapter": "bun build ./src/bin/bot-adapter.ts --outdir ./dist --target node",
    "build:worker": "bun build ./src/bin/session-worker.ts --outdir ./dist --target node",
    "build": "bun run build:adapter && bun run build:worker",
    "start:adapter": "bun run src/bin/bot-adapter.ts",
    "start:worker": "bun run src/bin/session-worker.ts",
    "test": "bun test ./src",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "git config core.hooksPath .githooks"
  },
  "dependencies": {
    "@saltify/milky-node-sdk": "^1.0.0",
    "bullmq": "^5.66.5",
    "discord.js": "^14.25.1",
    "dotenv": "^16.3.1",
    "gray-matter": "^4.0.3",
    "ioredis": "^5.9.1",
    "lru-cache": "^11.2.4",
    "openai": "^4.70.0",
    "opencode-ai": "1.1.19",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "postgres": "^3.4.8",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "bun-types": "latest",
    "eslint": "^8.56.0",
    "mock-socket": "^9.3.1",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.0.0"
  }
}
